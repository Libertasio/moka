<%= header :title => "Select branch for new release of #{@project.name}" %>
<form method="post">
  <fieldset>
    <p>
      <label for="branch">Branch:</label> 
      <select name="branch" id="branch">
        <option value="nil">New</option>
        <% for branch in @project.branches %>
          <option value="<%= branch.name %>"><%= branch.name %></option>
        <% end %>
      </select>
    </p>
    <p><label for="custom">New branch name:</label> <input type="text" id="custom" name="custom" style="width:4em"/></p>
    <p><span class="placeholder">&nbsp;</span> <input type="submit" value="Release in this branch"/></p>
  </fieldset>
</form>
<%= footer %>
